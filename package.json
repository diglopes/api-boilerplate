{
  "name": "api-boilerplate",
  "version": "1.0.0",
  "description": "An boilerplate to create amazing APIs",
  "main": "src/server.js",
  "scripts": {
    "dev": "npx cross-env NODE_ENV=development npx nodemon src/server.js",
    "start": "npx cross-env NODE_ENV=production node src/server.js",
    "dev:docker": "docker-compose run --rm app npm install && docker-compose up -d"
  },
  "keywords": ["api", "express", "boilerplate"],
  "author": "Diego Lopes",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.3",
    "express-rate-limit": "^5.1.3",
    "express-validation": "^3.0.5",
    "helmet": "^3.23.3",
    "http-status": "^1.4.2",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^4.0.0",
    "swagger-ui-express": "^4.1.4",
    "x-xss-protection": "^1.3.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.4"
  }
}
